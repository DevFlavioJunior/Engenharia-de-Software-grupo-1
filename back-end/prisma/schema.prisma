generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  chats Chat[]
}

model Chat {
  id       Int    @id @default(autoincrement())
  name     String
  createdAt DateTime @default(now())
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
  messages Message[]
}

model Message {
  id       Int    @id @default(autoincrement())
  chatId   Int
  chat     Chat   @relation(fields: [chatId], references: [id])
  createdAt DateTime @default(now())
  text     String
  role     String
}